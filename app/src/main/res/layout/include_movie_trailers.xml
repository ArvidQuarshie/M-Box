<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_card"
    android:layout_marginLeft="@dimen/spacing_card"
    android:layout_marginRight="@dimen/spacing_card">

    <LinearLayout
        android:id="@+id/card_content_holder_trailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/card_header_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/spacing_major">

            <TextView
                android:id="@+id/txt_see_more_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="@string/see_more"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="?attr/colorAccent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_title_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="4dp"
                android:text="Trailers"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/trailerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/spacing_major"
            android:paddingRight="@dimen/spacing_major"
            android:paddingTop="8dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:fillViewport="true">


                <LinearLayout
                    android:id="@+id/card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">


                </LinearLayout>


            </HorizontalScrollView>


        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

